<!-- views/admin/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
        .action-buttons {
            display: flex;
            gap: 10px;
        }
        .approve-btn, .reject-btn {
            padding: 5px 10px;
            border: none;
            color: white;
            cursor: pointer;
        }
        .approve-btn {
            background-color: green;
        }
        .reject-btn {
            background-color: red;
        }
    </style>
</head>
<body>
    <h1>Leave Applications</h1>
    <table>
        <thead>
            <tr>
                <th>User ID</th>
                <th>First Name</th>
                <th>Start Day</th>
                <th>End Day</th>
                <th>Reason</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% leaves.forEach(leave => { %>
                <tr>
                    <td><%= leave.user_id %></td>
                    <td><%= leave.profiles.first_name %></td>
                    <td><%= leave.start_day %></td>
                    <td><%= leave.end_day %></td>
                    <td><%= leave.reason %></td>
                    <td class="action-buttons">
                        <form action="/approve-leave" method="POST" style="display:inline;">
                            <input type="hidden" name="leave_id" value="<%= leave.user_id %>">
                            <button type="submit" class="approve-btn">Approve</button>
                        </form>
                        <form action="/reject-leave" method="POST" style="display:inline;">
                            <input type="hidden" name="leave_id" value="<%= leave.user_id %>">
                            <button type="submit" class="reject-btn">Reject</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>