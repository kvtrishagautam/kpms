<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leave Management</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, sans-serif;
            background-color: #f0f4f8;
            margin: 0;
            padding: 20px;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            padding: 15px;
            background: white;
            border-bottom: 2px solid #ffd700;
        }

        .nav-items {
            display: flex;
            gap: 20px;
        }

        .nav-icons {
            display: flex;
            gap: 10px;
        }

        .breadcrumb {
            padding: 15px;
            background: white;
            margin: 20px 0;
        }

        .container {
            background: white;
            padding: 30px;
            border-radius: 8px;
        }

        .leave-cards {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
            overflow-x: auto;
            padding: 10px 0;
        }

        .leave-card {
            background: #1e40af;
            color: white;
            padding: 20px;
            border-radius: 8px;
            min-width: 200px;
            display: flex;
            justify-content: space-between;
        }

        .leave-count {
            font-size: 2.5em;
            font-weight: bold;
        }

        .leave-type {
            margin: 5px 0;
        }

        .apply-button {
            background: #ffd700;
            color: black;
            padding: 5px 20px;
            border-radius: 4px;
            text-decoration: none;
            display: inline-block;
            margin-top: 10px;
        }

        .history-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .export-button {
            background: #2e7d32;
            color: white;
            padding: 8px 20px;
            border-radius: 4px;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .leave-table {
            width: 100%;
            border-collapse: collapse;
        }

        .leave-table th {
            background: #f8fafc;
            text-align: left;
            padding: 12px;
            font-weight: 500;
        }

        .leave-table td {
            padding: 12px;
            border-top: 1px solid #edf2f7;
        }

        .actions-button {
            background: #1e40af;
            color: white;
            padding: 6px 16px;
            border-radius: 4px;
            border: none;
            cursor: pointer;
        }

        .status-pending { color: #f59e0b; }
        .status-approved { color: #10b981; }
        .status-rejected { color: #ef4444; }

        .flash-message {
            padding: 15px;
            margin: 20px 0;
            border-radius: 4px;
        }
        .flash-success { background: #10b981; color: white; }
        .flash-error { background: #ef4444; color: white; }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="nav-items">
            <a href="/" style="text-decoration: none;"><div style=" color: black;">Dashboard</div></a>
            <div>Requests</div>
            <div>Payroll</div>
            <div>Company</div>
            <div>Extras</div>
        </div>
        <div class="nav-icons">
            <span>üîî</span>
            <span>‚úâÔ∏è</span>
            <span>üë§</span>
        </div>
    </nav>

    <div class="breadcrumb">
        Dashboard > Apply for Leave
    </div>

    <div class="container">
        <h2>üìñ Leave Application</h2>

        <div class="leave-cards">
            <% const dummyLeaveTypes = [
                { id: 1, name: 'Annual Leave', available_days: 14 },
                { id: 2, name: 'Sick Leave', available_days: 10 },
                { id: 3, name: 'Personal Leave', available_days: 5 },
                { id: 4, name: 'Unpaid Leave', available_days: 30 }
            ]; %>
            
            <% dummyLeaveTypes.forEach(type => { %>
                <div class="leave-card">
                    <div>
                        <div class="leave-count"><%= type.available_days %></div>
                        <div class="leave-type"><%= type.name %></div>
                        <a href="/leave/apply?type=<%= type.id %>" class="apply-button">Apply</a>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="history-header">
            <h3>Leave History</h3>
            <button class="export-button">
                Export <span>üìä</span>
            </button>
        </div>

        <table class="leave-table">
            <thead>
                <tr>
                    <th>Name(s)</th>
                    <th>Duration(s)</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Type</th>
                    <th>Reason(s)</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% const dummyLeaveHistory = [
                    {
                        user: { full_name: 'John Doe' },
                        duration: '3 days',
                        start_date: '2025-02-15',
                        end_date: '2025-02-17',
                        leave_types: { name: 'Annual Leave' },
                        reason: 'Family vacation',
                        status: 'approved'
                    },
                    {
                        user: { full_name: 'Jane Smith' },
                        duration: '2 days',
                        start_date: '2025-02-20',
                        end_date: '2025-02-21',
                        leave_types: { name: 'Sick Leave' },
                        reason: 'Medical appointment',
                        status: 'pending'
                    },
                    {
                        user: { full_name: 'Mike Johnson' },
                        duration: '1 day',
                        start_date: '2025-02-25',
                        end_date: '2025-02-25',
                        leave_types: { name: 'Personal Leave' },
                        reason: 'Personal matters',
                        status: 'rejected'
                    }
                ]; %>

                <% if (dummyLeaveHistory && dummyLeaveHistory.length > 0) { %>
                    <% dummyLeaveHistory.forEach(leave => { %>
                        <tr>
                            <td><%= leave.user?.full_name || 'N/A' %></td>
                            <td><%= leave.duration %></td>
                            <td><%= new Date(leave.start_date).toLocaleDateString() %></td>
                            <td><%= new Date(leave.end_date).toLocaleDateString() %></td>
                            <td><%= leave.leave_types?.name || 'N/A' %></td>
                            <td><%= leave.reason %></td>
                            <td class="status-<%= leave.status.toLowerCase() %>">
                                <%= leave.status.charAt(0).toUpperCase() + leave.status.slice(1) %>
                            </td>
                            <td>
                                <button class="actions-button">Actions ‚ãÆ</button>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="8" style="text-align: center;">No leave history found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <% if (locals.flashMessage) { %>
        <div class="flash-message flash-<%= flashMessage.type %>">
            <%= flashMessage.text %>
        </div>
    <% } %>
</body>
</html>